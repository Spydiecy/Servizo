                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div id="dashboardTab" class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Quick Actions</h5>
                            </div>
                            <div class="card-body">
                                <% if (user.userType === 'customer') { %>
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <a href="/services" class="action-card">
                                                <div class="action-icon">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                                <h6>Find Services</h6>
                                                <p>Browse and book home services</p>
                                            </a>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <a href="#" class="action-card" onclick="event.preventDefault(); showBookingsTab(); return false;">
                                                <div class="action-icon">
                                                    <i class="fas fa-calendar-check"></i>
                                                </div>
                                                <h6>My Bookings</h6>
                                                <p>View your service bookings</p>
                                            </a>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <!-- Service Provider Actions -->
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <a href="#" class="action-card" onclick="event.preventDefault(); showCreateServiceModal(); return false;">
                                                <div class="action-icon">
                                                    <i class="fas fa-plus"></i>
                                                </div>
                                                <h6>Create Service</h6>
                                                <p>Add new service offerings</p>
                                            </a>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <a href="#" class="action-card" onclick="event.preventDefault(); showMyServicesTab(); return false;">
                                                <div class="action-icon">
                                                    <i class="fas fa-tools"></i>
                                                </div>
                                                <h6>My Services</h6>
                                                <p>Manage your services</p>
                                            </a>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <a href="#" class="action-card" onclick="event.preventDefault(); showBookingsTab(); return false;">
                                                <div class="action-icon">
                                                    <i class="fas fa-calendar-alt"></i>
                                                </div>
                                                <h6>Manage Bookings</h6>
                                                <p>Handle customer requests</p>
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <!-- Services Management Section -->
                                    <div id="servicesSection" class="mt-4" style="display: none;">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5>My Services</h5>
                                            <button class="btn btn-primary" onclick="showCreateServiceModal()">
                                                <i class="fas fa-plus"></i> Add New Service
                                            </button>
                                        </div>
                                        <div id="servicesList" class="row">
                                            <!-- Services will be loaded here -->
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bookings Tab -->
                <div id="bookingsTab" class="row" style="display: none;">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">
                                        <% if (user.userType === 'customer') { %>
                                            My Bookings
                                        <% } else { %>
                                            Manage Bookings
                                        <% } %>
                                    </h5>
                                    <select class="form-control" id="statusFilter" style="width: auto;">
                                        <option value="all">All Bookings</option>
                                        <option value="pending">Pending</option>
                                        <option value="confirmed">Confirmed</option>
                                        <option value="in-progress">In Progress</option>
                                        <option value="completed">Completed</option>
                                        <option value="cancelled">Cancelled</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Stats Cards -->
                                <div class="row mb-4" id="statsCards">
                                    <!-- Stats will be loaded here -->
                                </div>

                                <!-- Bookings List -->
                                <div id="bookingsList">
                                    <!-- Bookings will be loaded here -->
                                </div>
                                
                                <!-- Loading indicator -->
                                <div id="loadingIndicator" class="text-center py-4" style="display: none;">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <p class="mt-2">Loading bookings...</p>
                                </div>
                                
                                <!-- No bookings message -->
                                <div id="noBookings" class="text-center py-5" style="display: none;">
                                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                    <h4>No Bookings Found</h4>
                                    <p class="text-muted">
                                        <% if (user.userType === 'customer') { %>
                                            You haven't made any bookings yet. <a href="/services">Browse services</a> to get started.
                                        <% } else { %>
                                            No bookings received yet. Make sure your services are active and visible.
