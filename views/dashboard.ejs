// Reviews functionality
async function loadMyReviews() {
    const reviewsList = document.getElementById('myReviewsList');
    reviewsList.innerHTML = '';

    try {
        const response = await fetch('/reviews/user');
        const data = await response.json();

        if (!data.success) {
            throw new Error(data.message);
        }

        if (data.reviews.length === 0) {
            reviewsList.innerHTML = `
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash display-1 text-muted"></i>
                    <p class="text-muted mt-3">You haven't written any reviews yet.</p>
                    <a href="/services" class="btn btn-primary">Browse Services</a>
                </div>
            `;
            return;
        }

        reviewsList.innerHTML = data.reviews.map(review => `
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="mb-1">
                                <a href="/services/${review.serviceId._id}">${review.serviceId.title}</a>
                            </h6>
                            <div class="mb-2">
                                ${generateReviewStars(review.rating)}
                            </div>
                            <small class="text-muted">
                                <i class="far fa-calendar"></i> ${new Date(review.createdAt).toLocaleDateString()}
                                ${review.isVerified ? '<span class="badge bg-success ms-2"><i class="fas fa-check-circle"></i> Verified</span>' : ''}
                            </small>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteMyReview('${review._id}')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                    <p class="mt-3">${review.comment}</p>
                    
                    <div class="text-muted small">
                        <i class="fas fa-thumbs-up"></i> ${review.helpful || 0} helpful
                        <span class="ms-3"><i class="fas fa-thumbs-down"></i> ${review.notHelpful || 0} not helpful</span>
                    </div>
                    
                    ${review.providerResponse?.comment ? `
                        <div class="alert alert-info mt-3">
                            <strong><i class="fas fa-reply"></i> Provider Response:</strong>
                            <p class="mb-0 mt-2">${review.providerResponse.comment}</p>
                            <small class="text-muted">${new Date(review.providerResponse.respondedAt).toLocaleDateString()}</small>
                        </div>
                    ` : ''}
                </div>
            </div>
        `).join('');

    } catch (error) {
        reviewsList.innerHTML = `
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> Error loading reviews: ${error.message}
            </div>
        `;
    }
}

function generateReviewStars(rating) {
    let stars = '';
    for (let i = 1; i <= 5; i++) {
        stars += `<i class="fas fa-star ${i <= rating ? 'text-warning' : 'text-muted'}"></i>`;
    }
    return stars;
}

async function deleteMyReview(reviewId) {
    if (!await showConfirm('Are you sure you want to delete this review?', 'Delete Review')) return;

    try {
        const response = await fetch(`/reviews/${reviewId}`, {
            method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
            loadMyReviews();
            showToast('Review deleted successfully!', 'success');
        } else {
            showToast(data.message, 'error');
        }
    } catch (error) {
        showToast('Error deleting review: ' + error.message, 'error');
    }
}

