<div class="dashboard-section">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="sidebar-content">
                    <div class="user-info">
                        <div class="user-avatar-large">
                            <i class="fas fa-user"></i>
                        </div>
                        <h5><%= user.fullName %></h5>
                        <span class="badge badge-<%= user.userType === 'provider' ? 'success' : 'primary' %>">
                            <%= user.userType === 'provider' ? 'Service Provider' : 'Customer' %>
                        </span>
                    </div>
                    
                    <nav class="sidebar-nav">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" href="#" onclick="event.preventDefault(); showDashboardTab(); return false;">
                                    <i class="fas fa-tachometer-alt"></i>
                                    Dashboard
                                </a>
                            </li>
                            <% if (user.userType === 'customer') { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="event.preventDefault(); showBookingsTab(); return false;">
                                        <i class="fas fa-calendar-check"></i>
                                        My Bookings
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="event.preventDefault(); showReviewsTab(); return false;">
                                        <i class="fas fa-star"></i>
                                        My Reviews
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/services">
                                        <i class="fas fa-search"></i>
                                        Find Services
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="event.preventDefault(); showMyServicesTab(); return false;">
                                        <i class="fas fa-tools"></i>
                                        My Services
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" onclick="event.preventDefault(); showBookingsTab(); return false;">
                                        <i class="fas fa-calendar-alt"></i>
                                        Manage Bookings
                                    </a>
                                </li>
                            <% } %>
                            <li class="nav-item mt-3">
                                <a class="nav-link text-danger" href="#" onclick="logout()">
