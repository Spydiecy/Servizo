<script>
const userType = '<%= user.userType %>';
let currentBookingId = null;

// Tab management
function showDashboardTab() {
    try {
        // Hide all tabs
        document.getElementById('dashboardTab').style.display = 'block';
        document.getElementById('bookingsTab').style.display = 'none';
        document.getElementById('myServicesTab').style.display = 'none';
        
        // Update navigation
        updateActiveNavLink('dashboard');
    } catch (error) {
        console.error('Error in showDashboardTab:', error);
    }
}

function showBookingsTab() {
    try {
        
        // Hide all tabs
        const dashboardTab = document.getElementById('dashboardTab');
        const bookingsTab = document.getElementById('bookingsTab');
        const myServicesTab = document.getElementById('myServicesTab');
        
        if (dashboardTab) dashboardTab.style.display = 'none';
        if (bookingsTab) bookingsTab.style.display = 'block';
        if (myServicesTab) myServicesTab.style.display = 'none';
        
        // Update navigation and load bookings
        updateActiveNavLink('bookings');
        loadBookings();
        setupBookingEventListeners();
    } catch (error) {
        console.error('Error in showBookingsTab:', error);
    }
}

function showMyServicesTab() {
    try {
        // Hide all tabs
        document.getElementById('dashboardTab').style.display = 'none';
        document.getElementById('bookingsTab').style.display = 'none';
        document.getElementById('myServicesTab').style.display = 'block';
        if (document.getElementById('reviewsTab')) {
            document.getElementById('reviewsTab').style.display = 'none';
        }
        
        // Update navigation and load services
        updateActiveNavLink('services');
        loadMyServices();
    } catch (error) {
        console.error('Error in showMyServicesTab:', error);
    }
}

function showReviewsTab() {
    try {
        // Hide all tabs
        document.getElementById('dashboardTab').style.display = 'none';
        document.getElementById('bookingsTab').style.display = 'none';
        if (document.getElementById('myServicesTab')) {
            document.getElementById('myServicesTab').style.display = 'none';
        }
        document.getElementById('reviewsTab').style.display = 'block';
        
        // Update navigation and load reviews
        updateActiveNavLink('reviews');
        loadMyReviews();
    } catch (error) {
        console.error('Error in showReviewsTab:', error);
    }
}

function updateActiveNavLink(activeTab) {
    // Remove active class from all nav links
    document.querySelectorAll('.nav-link').forEach(link => {
        link.classList.remove('active');
    });
    
    // Add active class to current tab - simplified for now
    // You can enhance this to properly match the clicked link
}

// Bookings functionality
async function loadBookings(status = 'all') {
    try {
        // showLoading();
        
        const params = new URLSearchParams();
        if (status !== 'all') params.append('status', status);
        
        const response = await fetch(`/bookings/api?${params}`);
        const data = await response.json();
        
        if (data.success) {
            displayBookings(data.bookings);
            updateStats(data.bookings);
        } else {
            showError('Error loading bookings');
        }
    } catch (error) {
        console.error('Error loading bookings:', error);
        showError('Error loading bookings');
    } finally {
        // hideLoading();
    }
}

function displayBookings(bookings) {
    const container = document.getElementById('bookingsList');
    
    if (bookings.length === 0) {
        document.getElementById('noBookings').style.display = 'block';
        container.innerHTML = '';
        return;
    }
    
    document.getElementById('noBookings').style.display = 'none';
    
    container.innerHTML = bookings.map(booking => `
        <div class="booking-card mb-3">
            <div class="row">
                <div class="col-lg-8">
                    <div class="booking-info">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="booking-title">${booking.service?.title || 'Service'}</h5>
                            <span class="badge ${getStatusBadgeClass(booking.status)}">${booking.formattedStatus || booking.status}</span>
                        </div>
                        
                        <p class="booking-description text-muted">${booking.service?.description?.substring(0, 120) || ''}...</p>
                        
                        <div class="booking-details">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <i class="fas fa-calendar"></i>
                                        <span>${formatDateTime(booking.bookingDate, booking.bookingTime)}</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>${booking.customerAddress}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <i class="fas fa-user"></i>
                                        <span>${getContactName(booking)}</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-rupee-sign"></i>
                                        <span>₹${booking.totalAmount}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        ${booking.specialRequests ? `
                            <div class="special-requests mt-2">
                                <strong>Special Requests:</strong> ${booking.specialRequests}
                            </div>
                        ` : ''}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="booking-actions">
                        ${generateActionButtons(booking)}
                    </div>
                </div>
            </div>
        </div>
    `).join('');
}

function getContactName(booking) {
    if (userType === 'customer') {
        // Customer sees provider name
        const provider = booking.provider;
        if (provider && provider.firstName && provider.lastName) {
            return `${provider.firstName} ${provider.lastName}`;
        }
        return provider?.fullName || 'Provider';
    } else {
        // Provider sees customer name
        const customer = booking.customer;
        if (customer && customer.firstName && customer.lastName) {
            return `${customer.firstName} ${customer.lastName}`;
        }
        return customer?.fullName || 'Customer';
    }
}

function formatDateTime(date, time) {
    const bookingDate = new Date(date);
    const formattedDate = bookingDate.toLocaleDateString();
    return `${formattedDate} ${time}`;
}

function generateActionButtons(booking) {
    const buttons = [];
    
    if (userType === 'provider') {
        if (booking.status === 'pending') {
            buttons.push(`
                <button class="btn btn-success btn-sm me-2" onclick="updateBookingStatus('${booking._id}', 'confirmed')">
                    <i class="fas fa-check"></i> Confirm
                </button>
                <button class="btn btn-danger btn-sm" onclick="updateBookingStatus('${booking._id}', 'rejected')">
                    <i class="fas fa-times"></i> Reject
                </button>
            `);
        } else if (booking.status === 'confirmed') {
            buttons.push(`
                <button class="btn btn-primary btn-sm" onclick="updateBookingStatus('${booking._id}', 'in-progress')">
                    <i class="fas fa-play"></i> Start Service
                </button>
            `);
        } else if (booking.status === 'in-progress') {
            buttons.push(`
                <button class="btn btn-success btn-sm" onclick="updateBookingStatus('${booking._id}', 'completed')">
                    <i class="fas fa-check-circle"></i> Mark Complete
                </button>
            `);
        }
    } else {
        // Customer actions
        if (['pending', 'confirmed'].includes(booking.status)) {
            buttons.push(`
                <button class="btn btn-outline-danger btn-sm" onclick="cancelBooking('${booking._id}')">
                    <i class="fas fa-times"></i> Cancel Booking
                </button>
            `);
        }
    }
    
    return buttons.join('');
}

function getStatusBadgeClass(status) {
    const classes = {
        'pending': 'bg-warning',
        'confirmed': 'bg-info',
        'in-progress': 'bg-primary',
        'completed': 'bg-success',
        'cancelled': 'bg-secondary',
        'rejected': 'bg-danger'
    };
    return classes[status] || 'bg-secondary';
}

function updateStats(bookings) {
    const stats = {
        total: bookings.length,
        pending: bookings.filter(b => b.status === 'pending').length,
        confirmed: bookings.filter(b => b.status === 'confirmed').length,
        completed: bookings.filter(b => b.status === 'completed').length
    };
    
    const statsContainer = document.getElementById('statsCards');
    statsContainer.innerHTML = `
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">${stats.total}</div>
                <div class="stat-label">Total Bookings</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">${stats.pending}</div>
                <div class="stat-label">Pending</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">${stats.confirmed}</div>
                <div class="stat-label">Confirmed</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-value">${stats.completed}</div>
                <div class="stat-label">Completed</div>
            </div>
        </div>
    `;
}

async function updateBookingStatus(bookingId, status) {
    try {
        const response = await fetch(`/bookings/${bookingId}/status`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast('Booking status updated successfully!', 'success');
            loadBookings();
        } else {
