<script>
let currentService = null;
const serviceId = '<%= serviceId %>';
const currentUser = JSON.parse(document.getElementById('userData').textContent);

// Initialize page
document.addEventListener('DOMContentLoaded', function() {
    loadServiceDetails();
    setupBookingForm();
    // Don't call loadReviews here - it will be called after service details load
    // Don't call setupReviewEventListeners here either
});

async function loadServiceDetails() {
    try {
        const response = await fetch(`/services/api/${serviceId}`);
        const data = await response.json();
        
        if (data.success) {
            currentService = data.service;
            displayServiceDetails(data.service);
            
            // Load reviews after service details are displayed
            setupReviewEventListeners();
            loadReviews();
        } else {
            showError();
        }
    } catch (error) {
        console.error('Error loading service:', error);
        showError();
    } finally {
        document.getElementById('loadingState').style.display = 'none';
    }
}

function displayServiceDetails(service) {
    const content = document.getElementById('serviceContent');
    
    content.innerHTML = `
        <div class="row">
            <!-- Service Info -->
            <div class="col-lg-8">
                <div class="service-header mb-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="service-title">${service.title}</h1>
                            <div class="service-meta">
                                <span class="badge bg-primary me-2">${service.category}</span>
                                ${service.subcategory ? `<span class="badge bg-secondary">${service.subcategory}</span>` : ''}
                            </div>
                        </div>
                        <div class="service-rating text-end">
                            <div class="rating-stars">
                                ${generateStars(service.rating?.average || 0)}
                            </div>
                            <small class="text-muted">${service.rating?.count || 0} reviews</small>
                        </div>
                    </div>
                </div>

                <div class="service-details-card mb-4">
                    <h4>Service Description</h4>
                    <p class="service-description">${service.description}</p>
                    
                    ${service.features && service.features.length > 0 ? `
                        <h5 class="mt-4">What's Included</h5>
                        <ul class="features-list">
                            ${service.features.map(feature => `<li><i class="fas fa-check text-success"></i> ${feature}</li>`).join('')}
                        </ul>
                    ` : ''}
                </div>

                <div class="provider-info-card">
                    <h4>Service Provider</h4>
                    <div class="provider-details">
                        <div class="provider-header">
                            <div class="provider-avatar">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <div class="provider-info">
                                <h6>${((service.provider?.firstName || '') + ' ' + (service.provider?.lastName || '')).trim() || 'Service Provider'}</h6>
                                <p class="text-muted mb-1">${service.provider?.email || ''}</p>
                                <p class="text-muted">${service.provider?.phone || ''}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="reviews-section mt-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h4 class="mb-0"><i class="fas fa-star"></i> Reviews & Ratings</h4>
                            ${currentUser ? `
                                <button class="btn btn-light btn-sm" onclick="showWriteReviewModal()">
                                    <i class="fas fa-pencil-alt"></i> Write Review
                                </button>
                            ` : ''}
                        </div>
                        <div class="card-body">
                            <!-- Rating Summary -->
                            <div class="row mb-4" id="ratingSummary">
                                <div class="col-md-4 text-center">
                                    <h1 class="display-3" id="avgRating">0</h1>
                                    <div class="mb-2" id="avgStars"></div>
                                    <p class="text-muted"><span id="totalReviews">0</span> reviews</p>
                                </div>
                                <div class="col-md-8" id="ratingDistribution">
                                    <!-- Distribution bars will be loaded here -->
                                </div>
                            </div>

                            <hr>

                            <!-- Sort & Filter -->
                            <div class="mb-3 d-flex flex-wrap gap-2">
                                <div>
                                    <label class="me-2">Sort by:</label>
                                    <select id="sortReviews" class="form-select form-select-sm d-inline-block" style="width: auto;">
                                        <option value="newest">Newest First</option>
                                        <option value="oldest">Oldest First</option>
                                        <option value="highest">Highest Rating</option>
                                        <option value="lowest">Lowest Rating</option>
                                        <option value="helpful">Most Helpful</option>
                                    </select>
                                </div>
                                
