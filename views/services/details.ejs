                        ${currentUser ? `
                            ${currentUser.userType === 'customer' ? `
                                <button class="btn btn-primary w-100 mb-3" onclick="showBookingModal()">
                                    <i class="fas fa-calendar-plus"></i> Book Now
                                </button>
                            ` : `
                                <p class="text-muted text-center">Service providers cannot book services</p>
                            `}
                        ` : `
                            <a href="/auth/login" class="btn btn-primary w-100 mb-3">
                                <i class="fas fa-sign-in-alt"></i> Login to Book
                            </a>
                        `}
                        
                        <button class="btn btn-outline-primary w-100" onclick="contactProvider()">
                            <i class="fas fa-phone"></i> Contact Provider
                        </button>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    content.style.display = 'block';
}

function generateStars(rating) {
    const fullStars = Math.floor(rating);
    const hasHalfStar = rating % 1 !== 0;
    const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
    
    let starsHTML = '';
    
    // Full stars
    for (let i = 0; i < fullStars; i++) {
        starsHTML += '<i class="fas fa-star text-warning"></i>';
    }
    
    // Half star
    if (hasHalfStar) {
        starsHTML += '<i class="fas fa-star-half-alt text-warning"></i>';
    }
    
    // Empty stars
    for (let i = 0; i < emptyStars; i++) {
        starsHTML += '<i class="far fa-star text-warning"></i>';
    }
    
    return starsHTML;
}

function showBookingModal() {
    if (!currentService) return;
    
    // Set minimum date to today
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('bookingDate').setAttribute('min', today);
    
    const modal = new bootstrap.Modal(document.getElementById('bookServiceModal'));
    modal.show();
}

function setupBookingForm() {
    document.getElementById('bookingForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const bookingData = {
            serviceId: serviceId,
            bookingDate: formData.get('bookingDate'),
            bookingTime: formData.get('bookingTime'),
            customerAddress: formData.get('customerAddress'),
            specialRequests: formData.get('specialRequests')
        };
        
        try {
            const response = await fetch('/bookings', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(bookingData)
            });
            
            const data = await response.json();
            
            if (data.success) {
                showToast('Booking created successfully! You will receive confirmation soon.', 'success');
                
                const modal = bootstrap.Modal.getInstance(document.getElementById('bookServiceModal'));
                modal.hide();
                this.reset();
                
                // Delay redirect to allow toast to be visible
                setTimeout(() => {
                    window.location.href = '/bookings';
                }, 2000);
            } else {
                showToast('Error creating booking: ' + data.message, 'error');
            }
        } catch (error) {
            console.error('Error creating booking:', error);
            showToast('Error creating booking', 'error');
        }
    });
}

function contactProvider() {
    if (!currentService?.provider?.phone) {
        showToast('Provider contact information not available', 'warning');
        return;
    }
    
    const phone = currentService.provider.phone;
    const message = `Hi, I'm interested in your service: ${currentService.title}`;
    const whatsappUrl = `https://wa.me/${phone.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(message)}`;
    
    window.open(whatsappUrl, '_blank');
}

function showError() {
    document.getElementById('errorState').style.display = 'block';
}

// Reviews functionality
let currentSort = 'newest';
let currentFilter = '';

function setupReviewEventListeners() {
    document.getElementById('sortReviews').addEventListener('change', (e) => {
        currentSort = e.target.value;
        loadReviews();
    });

    document.getElementById('filterRating').addEventListener('change', (e) => {
        currentFilter = e.target.value;
        loadReviews();
    });
}

async function loadReviews() {
    const reviewsList = document.getElementById('reviewsList');
    reviewsList.innerHTML = '';

    try {
        const params = new URLSearchParams({ sort: currentSort });
        if (currentFilter) params.append('rating', currentFilter);
        
        const response = await fetch(`/reviews/service/${serviceId}?${params}`);
        const data = await response.json();

        if (!data.success) throw new Error(data.message);

        // Update rating summary
        updateRatingSummary(data.stats);

        // Display reviews
        if (data.reviews.length === 0) {
            reviewsList.innerHTML = `
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash display-1 text-muted"></i>
                    <p class="text-muted mt-3">No reviews yet. Be the first to review!</p>
                </div>
            `;
            return;
        }

        const reviewsHtml = data.reviews.map(review => {
            return `
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="d-flex">
                            <div class="me-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 50px; height: 50px; font-size: 1.2rem;">
                                    ${(review.userId?.firstName?.charAt(0) || 'U') + (review.userId?.lastName?.charAt(0) || '')}
                                </div>
                            </div>
                            <div>
                                <h6 class="mb-1">${review.userId?.firstName || 'User'} ${review.userId?.lastName || ''}</h6>
                                <div class="mb-2">
                                    ${generateStars(review.rating)}
                                </div>
                                <small class="text-muted">
                                    <i class="far fa-calendar"></i> ${new Date(review.createdAt).toLocaleDateString()}
                                    ${review.isVerified ? '<span class="badge bg-success ms-2"><i class="fas fa-check-circle"></i> Verified</span>' : ''}
                                </small>
                            </div>
                        </div>
                        ${currentUser && review.userId && (review.userId._id === currentUser._id || review.userId === currentUser._id) ? `
                            <div>
                                <button class="btn btn-sm btn-outline-primary" onclick="editReview('${review._id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteReview('${review._id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        ` : ''}
                    </div>
                    <p class="mt-3">${review.comment}</p>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        ${currentUser ? `
                            <div>
                                <button class="btn btn-sm ${review.helpfulBy && review.helpfulBy.includes(currentUser._id) ? 'btn-success' : 'btn-outline-success'}" 
                                        onclick="voteHelpful('${review._id}', true)">
                                    <i class="fas fa-thumbs-up"></i> Helpful (${review.helpful || 0})
                                </button>
                                <button class="btn btn-sm ${review.notHelpfulBy && review.notHelpfulBy.includes(currentUser._id) ? 'btn-danger' : 'btn-outline-danger'}" 
                                        onclick="voteHelpful('${review._id}', false)">
                                    <i class="fas fa-thumbs-down"></i> Not Helpful (${review.notHelpful || 0})
                                </button>
                            </div>
                        ` : `
                            <div>
                                <span class="text-muted"><i class="fas fa-thumbs-up"></i> ${review.helpful || 0}</span>
                                <span class="text-muted ms-3"><i class="fas fa-thumbs-down"></i> ${review.notHelpful || 0}</span>
                            </div>
                        `}
                    </div>
                    
                    ${review.providerResponse && review.providerResponse.comment ? `
                        <div class="alert alert-info mt-3">
                            <strong><i class="fas fa-reply"></i> Provider Response:</strong>
                            <p class="mb-0 mt-2">${review.providerResponse.comment}</p>
                            <small class="text-muted">${new Date(review.providerResponse.respondedAt).toLocaleDateString()}</small>
                        </div>
                    ` : ''}
                </div>
            </div>
        `;
        }).join('');

        reviewsList.innerHTML = reviewsHtml;

    } catch (error) {
        console.error('Error in loadReviews:', error);
        reviewsList.innerHTML = `
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> Error loading reviews: ${error.message}
            </div>
        `;
    }
}

function updateRatingSummary(stats) {
    document.getElementById('avgRating').textContent = stats.average.toFixed(1);
    document.getElementById('totalReviews').textContent = stats.total;
    document.getElementById('avgStars').innerHTML = generateStars(stats.average);

    const distribution = document.getElementById('ratingDistribution');
    let html = '';
    for (let i = 5; i >= 1; i--) {
        const count = stats.distribution[i] || 0;
        const percentage = stats.total > 0 ? (count / stats.total * 100) : 0;
        html += `
            <div class="d-flex align-items-center mb-2">
                <span class="me-2">${i} <i class="fas fa-star text-warning"></i></span>
                <div class="progress flex-grow-1" style="height: 20px;">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: ${percentage}%"></div>
                </div>
                <span class="ms-2 text-muted">${count}</span>
            </div>
        `;
    }
    distribution.innerHTML = html;
}

async function showWriteReviewModal() {
    if (!currentUser) {
        showToast('Please login to write a review', 'warning');
        setTimeout(() => window.location.href = '/auth/login', 1500);
        return;
    }

    // Check if user has a completed booking for this service
    try {
        const response = await fetch(`/bookings/api`);
        const data = await response.json();
        
        if (data.success) {
            const completedBooking = data.bookings.find(b => 
                b.service._id === serviceId && b.status === 'completed'
            );
            
            if (!completedBooking) {
                showToast('You need to complete a booking for this service before writing a review', 'warning');
                return;
            }
            
            document.getElementById('reviewBookingId').value = completedBooking._id;
            const modal = new bootstrap.Modal(document.getElementById('writeReviewModal'));
            modal.show();
        }
    } catch (error) {
        console.error('Error checking bookings:', error);
        showToast('Error checking booking status', 'error');
    }
}

async function submitReview() {
    const form = document.getElementById('reviewForm');
    const formData = new FormData(form);

    const reviewData = {
        serviceId: serviceId,
        bookingId: formData.get('bookingId'),
        rating: parseInt(formData.get('rating')),
        comment: formData.get('comment')
    };

    try {
        const response = await fetch('/reviews', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(reviewData)
        });

        const data = await response.json();

        if (data.success) {
            bootstrap.Modal.getInstance(document.getElementById('writeReviewModal')).hide();
            form.reset();
            loadReviews();
            showToast('Review submitted successfully!', 'success');
        } else {
            showToast(data.message, 'error');
        }
    } catch (error) {
        showToast('Error submitting review: ' + error.message, 'error');
    }
}

async function voteHelpful(reviewId, isHelpful) {
    if (!currentUser) {
        showToast('Please login to vote', 'warning');
        return;
    }

    try {
        const response = await fetch(`/reviews/${reviewId}/vote`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ helpful: isHelpful })
        });

        const data = await response.json();

        if (data.success) {
            loadReviews();
            showToast('Vote recorded successfully', 'success');
        } else {
            showToast(data.message, 'error');
        }
    } catch (error) {
        showToast('Error voting: ' + error.message, 'error');
    }
}

async function deleteReview(reviewId) {
    if (!await showConfirm('Are you sure you want to delete this review?', 'Delete Review')) return;

    try {
        const response = await fetch(`/reviews/${reviewId}`, {
            method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
            loadReviews();
            showToast('Review deleted successfully!', 'success');
        } else {
            showToast(data.message, 'error');
        }
    } catch (error) {
        showToast('Error deleting review: ' + error.message, 'error');
    }
}

function editReview(reviewId) {
    showToast('Edit functionality coming soon!', 'info');
}
</script>

