                                <!-- Reviews will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Sidebar -->
            <div class="col-lg-4">
                <div class="booking-card sticky-top">
                    <div class="price-section">
                        <div class="price-display">
                            <span class="current-price">â‚¹${service.price}</span>
                            <span class="price-type">${service.priceType === 'hourly' ? '/hour' : service.priceType === 'per-visit' ? '/visit' : ''}</span>
                        </div>
                    </div>

                    <div class="service-info">
                        <div class="info-item">
                            <i class="fas fa-clock"></i>
                            <span>Duration: ${Math.floor(service.duration / 60)}h ${service.duration % 60}m</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Available in: ${service.serviceArea?.city || 'Location not specified'}</span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-calendar-check"></i>
                            <span>Bookings: ${service.bookingCount || 0}</span>
